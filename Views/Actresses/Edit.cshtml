                <label asp-for="NetWorth" class="control-label"></label>
                <input asp-for="NetWorth" class="form-control" />
                <span asp-validation-for="NetWorth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MovieName" class="control-label"></label>
                <select asp-for="MovieName" class="form-control" asp-items="ViewBag.MovieName"></select>
                <span asp-validation-for="MovieName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
