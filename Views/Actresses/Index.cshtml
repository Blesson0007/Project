@model IEnumerable<Projects.Models.Actress>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ActressName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NetWorth)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MovieNameNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ActressName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Age)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NetWorth)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MovieNameNavigation.MovieName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.ActressId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.ActressId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.ActressId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
